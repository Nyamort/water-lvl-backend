{
  "compilerOptions": {
    "outDir": "dist",
    "sourceMap": true,
    "baseUrl": ".",
    "target": "ES2022",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": [
    "./*.js",
    "src/**/*.ts"
  ]
}